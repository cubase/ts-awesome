{
    "compilerOptions": {
      "target": "es6",
      "outDir": "./dist",
      "baseUrl": "./src",
      "module": "commonjs",
      "esModuleInterop": true,
      "noImplicitAny": true,
      "removeComments": true,
      "allowJs": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "alwaysStrict": true,
      "strictNullChecks": true,
      "downlevelIteration": true,
      "inlineSourceMap": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["**/node_modules/**", "./dist"]
  }
  